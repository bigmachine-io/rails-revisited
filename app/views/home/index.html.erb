<section class="text-gray-600 body-font">
  <main class="container mx-auto mt-28 px-5 flex">
    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
      <img class="object-cover object-center rounded" alt="hero" src="<%=@page.content.image_url(:image)%>">
    </div>
    <div class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">
        <%=@page.title%>
      </h1>
      <%= @page.content.html("text") %>
      <div class="flex justify-center mt-2">
        <a href="<%=@page.content(:link)%>" class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">
          <%=@page.content(:linktext)%>
        </a>
      </div>
    </div>
  </div>
  </main>
</section>